<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>1</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="Access-Control-Allow-Origin" content="*">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />
    <link href="~/css/public.css" rel="stylesheet" />
</head>
<body>
    <script type="text/javascript">
        var currUrl = window.location.pathname.toLowerCase();
        if (currUrl.indexOf("login") > -1 || currUrl == "/" || currUrl == "/admin") {
            document.getElementsByTagName("html")[0].className = "loginHtml";
            document.getElementsByTagName("body")[0].className = "loginBody";
        } else if (currUrl.indexOf("main") > -1) {
            document.getElementsByTagName("body")[0].className = "main_body";
        } else {
            document.getElementsByTagName("body")[0].className = "childrenBody";
        }
    </script>
    <form class="layui-form">
        <div class="login_face"><img src="~/images/default.png" class="userAvatar"></div>
        <div class="layui-form-item input-item">
            <label for="userName">用户名</label>
            <input type="text" placeholder="请输入用户名" autocomplete="off" id="userName" class="layui-input" lay-verify="required">
        </div>
        <div class="layui-form-item input-item">
            <label for="password">密码</label>
            <input type="password" placeholder="请输入密码" autocomplete="off" id="password" class="layui-input" lay-verify="required">
        </div>
        <div class="layui-form-item input-item" id="imgCode">
            <label for="code">验证码</label>
            <input type="text" placeholder="请输入验证码" autocomplete="off" id="code" maxlength="4" class="layui-input" lay-verify="required">
            @*<img id="imgVerifyCode" src="/Main/Login/ValidateCode" onclick="this.src='/Main/Login/ValidateCode?'+Math.random();" />*@
        </div>
        <div class="layui-form-item">
            <button class="layui-btn layui-block" lay-filter="login" lay-submit>登录</button>
        </div>
    </form>
    <script src="~/lib/layui/layui.js"></script>
    <script src="~/js/login.js"></script>

</body>
</html>
